{{#if news}}
  <div
    id="carouselExampleIndicators"
    class="carousel slide"
    data-bs-ride="true"
  >
    <div class="carousel-indicators">
      {{#times news.length}}
        <button
        type="button"
        data-bs-target="#carouselExampleIndicators"
        data-bs-slide-to="{{this}}"
        {{#ifEquals 0 this}}
        {{log this}}
          class="active"
          aria-current="true"
        {{/ifEquals}}
        aria-label="Slide {{this}}"
        ></button>
      {{/times}}
    </div>
    <div class="carousel-inner">
      {{!-- <div class="carousel-item active">
        <div class="d-flex text-center align-items-center h-100">
          <p>OLAOALOALAOLA</p>
        </div>
      </div> --}}
      {{#each news}}
          <div class="carousel-item">
          <h3>{{title}}</h3>
          <img src="..." class="d-block w-100" alt="..." />
        </div>
      {{/each}}
    </div>
    <button
      class="carousel-control-prev"
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button
      class="carousel-control-next"
      type="button"
      data-bs-target="#carouselExampleIndicators"
      data-bs-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
{{/if}}

{{#each news}}{{/each}}

{{#if gameRooms}}
  <div class="container">
    <div class="row">
      {{#each gameRooms}}
        <div class="col-sm-12 col-md-4 col-lg-3 m-2">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">{{game}}</h6>
              <p>{{status}}<br />{{players.length}}/{{maxPlayers}}</p>
              <a href="/gameroom/{{_id}}" class="card-link">Join</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}