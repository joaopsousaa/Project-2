<p>Welcome to Gamelandia!</p>

{{#if gameRooms}}
  <h2>Game Rooms Status Waiting</h2>
  <input
    type="text"
    id="search-game"
    onkeyup="searchGames()"
    placeholder="Search for games"
  />
  <table id="list-of-gamerooms">
    <tr id="headers">
      <th>Name</th>
      <th>Game</th>
      <th>Min Players</th>
      <th>Max Players</th>
      <th>Status</th>
    </tr>
    {{#each gameRooms}}
      <tr>
        <td>{{name}}</td>
        <td>{{game}}</td>
        <td>{{minPlayers}}</td>
        <td>{{maxPlayers}}</td>
        <td>{{status}}</td>
        <td><a href="/gameroom/{{this._id}}" id="join-room">Join Room</a></td>
      </tr>
    {{/each}}
  </table>
{{/if}}