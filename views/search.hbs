<div class="container mt-4">
  {{#if gameRooms}}
    <h3>Results</h3>
    <div class="row">
      {{#each gameRooms}}
        <div class="col-sm-12 col-md-4 col-lg-3 mt-2">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">{{name}}</h5>
              <h6 class="card-subtitle mb-2 text-muted">{{game}}</h6>
              <p>{{status}} <br /> {{players.length}}/{{maxPlayers}}</p>
              <a href="/gameroom/{{_id}}" class="card-link">Join</a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <h3>Nothing here, try to search for something else ...</h3>
  {{/if}}
</div>