<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Gamelandia</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>

  <body class="d-flex flex-column min-vh-100">

    <header>
      <nav class="navbar navbar-expand-lg bg-primary">
        <div class="container">
          <a class="navbar-brand mb-0 h1 fw-bold" href="/">
            Gamelandia
          </a>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="collapse navbar-collapse d-lg-flex justify-content-end"
            id="navbarSupportedContent"
          >
            <form
              class="me-auto ms-auto mb-auto mt-4 mt-lg-0"
              action="/search"
              method="post"
            >
              <input
                class="form-control"
                type="text"
                placeholder="Search Game Rooms"
                name="search"
              />
            </form>
            <ul class="navbar-nav mb-2 mb-lg-0">
              {{#if isLoggedIn}}
                <li class="nav-item">
                  <a class="nav-link" href="/gameroom/create">Create Game Room</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/user/{{userId}}">Profile</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/auth/logout">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/auth/login">Login</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/auth/signup">Sign Up</a>
                </li>
              {{/if}}
            </ul>

          </div>
        </div>

      </nav>
    </header>

    <main>
      {{#if errorMessage}}
        <div class="d-flex justify-content-center">
          <div class="alert alert-danger" role="alert">
            {{errorMessage}}
          </div>
        </div>
      {{/if}}
      {{{body}}}
    </main>

    <footer class="mt-auto">
      <div>
        Â© Gamelandia | 2022
      </div>
    </footer>

    {{! Scripts }}
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/script.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
  </body>

</html>